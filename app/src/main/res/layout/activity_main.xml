<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--内容-->
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_home" />

    <!--侧边栏-->
    <LinearLayout
        android:id="@+id/ll_drawer_guide"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@drawable/rect_solid_blue_border_white_5"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_guide_hq"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rect_solid_blue_border_white_5"
            android:gravity="center"
            android:text="红旗"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_guide_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rect_solid_blue_border_white_5"
            android:gravity="center"
            android:text="奔腾苑"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_guide_bt_teacher"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rect_solid_blue_border_white_5"
            android:gravity="center"
            android:text="奔腾苑讲师端"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_guide_bt_manager"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rect_solid_blue_border_white_5"
            android:gravity="center"
            android:text="奔腾苑管理端"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_guide_wm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rect_solid_blue_border_white_5"
            android:gravity="center"
            android:text="维玛荟客"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>